<a class="item item-poster grid-item" href="{full-link}">
	<div class="item-poster__img img-fit-cover img-responsive img-responsive--portrait">
		<img src="{image-1}" loading="lazy" alt="{title}">
		<div class="item__play-btn anim"><span class="fal fa-play"></span></div>
		<div class="item-poster__desc-btn anim js-show-info"><span class="fal fa-plus"></span></div>
	</div>
	<div class="item-poster__title ws-nowrap">{title}</div>
	<div class="item__meta ws-nowrap">
		[rating-type-4]<div class="item__rating"><div class="js-count-rating d-none">{rating}{vote-num}</div></div>[/rating-type-4]
		<span>{vote-num} оценили</span>
	</div>
</a>